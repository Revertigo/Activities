        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".data.rtdb.activity.UserProfile"></activity>
        <activity
            android:name=".data.rtdb.activity.JoinActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SearchActivity.AdvancedSearch"
            android:windowSoftInputMode="adjustPan" />
        <activity
