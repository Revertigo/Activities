        <activity
            android:name=".data.rtdb.activity.ShowActivities"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".SearchActivity.SearchOrPost"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.activities.SearchActivity.SearchOrPost" />
        </activity>
        <activity
            android:name=".SearchActivity.SearchActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".PostActivitiyJava.PostActivity"
