<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    tools:context=".ui.profile.ShowFuturePost">

    <Button
        android:id="@+id/showPostedFuture"
        style="@style/button_rectangle_gray_no_corner"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:text="Created By You"
        android:tooltipText="Activities you posted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:id="@+id/showJoinedFuture"
        style="@style/button_rectangle_gray_no_corner"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:text="You Participated"
        android:tooltipText="Activities you took a part"
        app:layout_constraintBottom_toTopOf="@+id/backToProfile"
        app:layout_constraintEnd_toEndOf="@+id/showPostedFuture"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showPostedFuture"
        app:layout_constraintTop_toBottomOf="@+id/showPostedFuture"
        app:layout_constraintVertical_bias="0.323" />

    <Button
        android:id="@+id/backToProfile"
        style="@style/button_rectangle_gray_no_corner"
        android:layout_width="152dp"
        android:layout_height="53dp"
        android:layout_marginBottom="88dp"
        android:text="back to profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showJoinedFuture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/showJoinedFuture" />
</androidx.constraintlayout.widget.ConstraintLayout>