<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paint_back_crop"
    tools:context=".ui.searchActivity.SearchActivity">

    <SearchView
        android:id="@+id/searchByIdSearchView"
        style="@style/button_rectangle_gray"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:iconifiedByDefault="false"
        android:queryHint="Enter ID"
        app:layout_constraintBottom_toBottomOf="@+id/searchByIdButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/searchByIdButton"
        app:layout_constraintTop_toTopOf="@+id/searchByIdButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/searchByIdButton"
        style="@style/button_rectangle_light_gray_no_corner"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:fontFamily="@font/caveat_brush"
        android:text="SEARCH BY ID"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/closeAppSearchActivity"
        style="@style/button_rectangle_gray_no_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOSE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/logoutSearchActivity"
        style="@style/button_rectangle_gray_no_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/showAllTheActivitiesButton"
        style="@style/button_rectangle_light_gray"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:fontFamily="@font/caveat_brush"
        android:text="SHOW ALL ACTIVITIES"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <Button
        android:id="@+id/StringSearchButton"
        style="@style/button_rectangle_light_gray_no_corner"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:fontFamily="@font/caveat_brush"
        android:text="SEARCH"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/showAllTheActivitiesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/searchByIdButton"
        app:layout_constraintVertical_bias="0.265" />

    <SearchView
        android:id="@+id/stringSearchView"
        style="@style/button_rectangle_gray"
        android:layout_width="219dp"
        android:layout_height="53dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search Here"
        app:layout_constraintBottom_toBottomOf="@+id/StringSearchButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/StringSearchButton"
        app:layout_constraintTop_toTopOf="@+id/StringSearchButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/advancedSearchButton"
        style="@style/button_rectangle_light_gray"
        android:layout_width="368dp"
        android:layout_height="54dp"
        android:fontFamily="@font/caveat_brush"
        android:text="ADVANCED SEARCH"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/showAllTheActivitiesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StringSearchButton"
        app:layout_constraintVertical_bias="0.71" />

    <Button
        android:id="@+id/backToSearchOrPost"
        style="@style/button_rectangle_gray_no_corner"
        android:layout_width="152dp"
        android:layout_height="63dp"
        android:fontFamily="@font/caveat_brush"
        android:text="MAIN MENU"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoutSearchActivity"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/closeAppSearchActivity"
        app:layout_constraintTop_toBottomOf="@+id/showAllTheActivitiesButton"
        app:layout_constraintVertical_bias="0.603" />


</androidx.constraintlayout.widget.ConstraintLayout>