<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="button_rectangle_gray_no_corner" parent="android:Widget">
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_rectangle_bright_no_corner" parent="android:Widget">
        <item name="android:background">@drawable/button_bright</item>
        <item name="android:textColor">#004D40 </item>
    </style>

    <style name="button_rectangle_light_gray_no_corner" parent="android:Widget">
        <item name="android:background">@drawable/button_light_gray</item>
        <item name="android:textColor">#B71C1C</item>
    </style>

    <style name="button_rectangle_light_gray" parent="android:Widget">
        <item name="android:background">@drawable/button_light_gray_nocorner</item>
        <item name="android:textColor">#004D40 </item>
    </style>

    <style name="button_rectangle_gray" parent="android:Widget">
        <item name="android:background">@drawable/textview_gray</item>
        <item name="android:textColor">#004D40 </item>
    </style>

    <style name="text_view_style" parent="android:Widget">
        <item name="android:textColorHint">@color/common_google_signin_btn_text_dark_focused</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="edit_text_style" parent="android:Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
